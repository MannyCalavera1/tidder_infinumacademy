<div class="row" style="background: white">
  <div class="col-md-4 col-md-offset-4">
    <h4>Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="from-group">
        <label style="position:relative; top:20px; left:5px; font-size:0.7em">E-MAIL</label><br />
        <%= f.email_field :email, class: "form-control input-lg", autofocus: true %>
      </div>

      <div class="form-group">
          <label style="position:relative; top:20px; left:5px; font-size:0.7em">PASSWORD</label><br />
        <%= f.password_field :password, class: "form-control input-lg", autocomplete: "off" %>
      </div>
  </div>
</div>
<br>
<%
=begin
%>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= render "devise/shared/links" %>
<%
=end
%>
<div class="row">
  <div class="col-md-2 col-md-offset-5">
      <%= f.submit "sign-in", class: "btn btn-sm btn-block btn-danger"%>
  </div>
</div>
<% end %>
<br>
<div class="row">
  <div class="col-md-1 col-md-offset-6">
      <%= link_to "sign-up?", new_user_registration_path, class: "btn btn-sm btn-block btn-info"%>
  </div>
</div>
